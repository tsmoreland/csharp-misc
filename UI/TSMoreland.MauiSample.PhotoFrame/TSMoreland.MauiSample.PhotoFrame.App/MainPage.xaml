<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TSMoreland.MauiSample.PhotoFrame.App.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="FillAndExpand">

            <HorizontalStackLayout Spacing="5" VerticalOptions="Start" x:Name="Toolbar">
                <Button x:Name="SelectFolderButton" Clicked="SelectFolderButton_Clicked" HorizontalOptions="Center" Text="Select File(s) or Folder"/>
            </HorizontalStackLayout>

            <Image
                x:Name="CurrentImage"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
