@inject IdentityDemo.App.Services.ITokenProvider TokenProvider 

<div id="sidebar-wrapper" class="bg-light">
    <a class="navbar-brand" href="" >IdentityDemo.Server</a>
    <div class="menu list-group list-group-flush">
        <AuthorizeView>
            <Authorized>
                <NavLink class="list-group-item list-group-item-action bg-light" href="/" Match="NavLinkMatch.All">
                    <span class="oi oi-home" aria-hidden="true"></span> Home
                </NavLink>
                <NavLink class="list-group-item list-group-item-action bg-light" href="Profile">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Profile
                </NavLink>
                <NavLink class="list-group-item list-group-item-action bg-light" href="Weather">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Weather Forecast
                </NavLink>
                <form action="/LogoutIdp" method="post">
                    <button class="nav-link btn btn-link bg-light" type="submit">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Logout (@context.User.Identity.Name)
                    </button>
                    <input type="hidden" name="__RequestVerificationToken" value="@TokenProvider.XsrfToken" />
                </form>
            </Authorized>
            <NotAuthorized>
                <NavLink class="list-group-item list-group-item-action bg-light" href="/LoginIdp">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Login
                </NavLink>
            </NotAuthorized>
        </AuthorizeView>

    </div>
</div>

