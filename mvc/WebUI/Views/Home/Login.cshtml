@model LoginModel

<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h3 class="text-center">Login</h3>
        <form asp-action="Login" method="post" class="form-group" asp-route-returnUrl="@ViewBag.ReturnUrl">
            <div class="form-group row">
                <label asp-for="UserName" class="col-sm-4"></label>
                <div class="col-sm-8">
                    <input asp-for="UserName" class="form-control"/>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Password" class="col-sm-4"></label>
                <div class="col-sm-8">
                    <input asp-for="Password" class="form-control"/>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            <div asp-validation-summary="All"></div>
        </form>
        <a asp-action="ForgotPassword">Forgot Password?</a>
        <br/>
        <a asp-action="ExternalLogin" asp-route-provider="google">Login with Google</a>
    </div>
</div>