@model TwoFactorModel

<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2 class="text-center">2 Stage Verification (2SV) / 2 Factor Authentication (2FA)</h2>
        <p>Please enter your code below</p>
        <form asp-action="TwoFactor" class="form-group">
            <div class="form-group row">
                <label asp-for="Token" class="col-sm-4"></label>
                <div class="col-sm-8">
                    <input asp-for="Token" class="form-control"/>
                </div>
            </div>
            <div class="form-group row">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
            <div asp-validation-summary="All"></div>
        </form>
    </div>
</div>